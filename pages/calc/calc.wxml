<!--pages/calc/calc.wxml-->
<view class="content">
  <view class="layout-top">
    <view class="screen">
      {{screenData}}
    </view>
  </view>
  <view class="layout-bottom">
    <view class="btnGroup">
      <view class="item orange" bindtap="onButtonClick" id="{{idc}}">С</view>
      <view class="item orange" bindtap="onButtonClick" id="{{idb}}">←</view>
      <view class="item orange iconBtn" bindtap="history">
          <icon type="{{iconType}}" color="{{iconColor}}" class="icon" size="25"/>
      </view>
      <view class="item orange" bindtap="onButtonClick" id="{{idadd}}">＋</view>
    </view>
    <view class="btnGroup">
      <view class="item blue" bindtap="onButtonClick" id="{{id9}}">9</view>
      <view class="item blue" bindtap="onButtonClick" id="{{id8}}">8</view>
      <view class="item blue" bindtap="onButtonClick" id="{{id7}}">7</view>
      <view class="item orange" bindtap="onButtonClick" id="{{idj}}">－</view>
    </view>
    <view class="btnGroup">
      <view class="item blue" bindtap="onButtonClick" id="{{id6}}">6</view>
      <view class="item blue" bindtap="onButtonClick" id="{{id5}}">5</view>
      <view class="item blue" bindtap="onButtonClick" id="{{id4}}">4</view>
      <view class="item orange" bindtap="onButtonClick" id="{{idx}}">×</view>
    </view>
    <view class="btnGroup">
      <view class="item blue" bindtap="onButtonClick" id="{{id3}}">3</view>
      <view class="item blue" bindtap="onButtonClick" id="{{id2}}">2</view>
      <view class="item blue" bindtap="onButtonClick" id="{{id1}}">1</view>
      <view class="item orange" bindtap="onButtonClick" id="{{iddiv}}">÷</view>
    </view>
    <view class="btnGroup">
      <view class="item blue zero" bindtap="onButtonClick" id="{{id0}}">0</view>
      <view class="item blue" bindtap="onButtonClick" id="{{idd}}">.</view>
      <view class="item orange" bindtap="onButtonClick" id="{{ide}}">＝</view>
    </view>
  </view>
</view>